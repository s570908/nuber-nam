{
  "name": "nuber",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "predev": "yarn run types",
    "devS": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "dev:types": "npm run types",
    "dev:server": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "dev:client": "npm start --prefix client",
    "dev": "set NODE_ENV=development && concurrently npm:dev:*",
    "tsc": "tsc",
    "prebuild": "rm -rf dist",
    "postinstall": "npm run tsc",
    "build:server": "tsc",
    "build": "concurrently npm:build:*",
    "build:client": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "postbuild": "cp ./src/api/**/**/*.graphql ./dist/api/ && mkdir ./dist/client && cp -av ./client/build ./dist/client/",
    "start:server": "node ./dist/index.js",
    "start": "concurrently npm:start:*"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/add_issue_number_into_commit.sh $HUSKY_GIT_PARAMS"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.8",
    "@types/helmet": "^0.0.47",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mailgun-js": "^0.22.7",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.5",
    "@types/twilio": "^2.11.0",
    "babel-runtime": "^6.26.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^2.0.4",
    "pg": "^8.2.1",
    "ts-node": "^8.10.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql-tools": "^6.0.1",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "merge-graphql-schemas": "^1.7.8",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.16",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg-protocol": "^1.2.4",
    "tslint": "^6.1.2",
    "twilio": "^3.53.0",
    "typeorm": "^0.2.25"
  }
}
